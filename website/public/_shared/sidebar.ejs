  <!-- Posts List -->
    <section>
      <ul class="posts">
        <% for(var slug in public.posts._data){ %>
          <li>
            <article>
              <header>
                <h3><a href="/posts/<%= slug %>"><%= public.posts._data[slug].title %></a></h3>
                <time class="published" datetime="2015-10-20">October 20th, 2015</time>
              </header>
              <a href="/posts/<%= slug %>" class="image"><img src="/images/posts/<%= public.posts._data[slug].ft_image %>" alt="" /></a>
            </article>
          </li>
        <% }; %>
      </ul>
    </section>

