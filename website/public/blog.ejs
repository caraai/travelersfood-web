<% function excerpt(content) {
    if(-1 == content.indexOf("<!-- more -->")) return content;
    else return content.split("<!-- more -->")[0]; 
  } 
%>

<% for(var slug in public.posts._data){ %>
    <!-- Post -->
    <article class="post">
        <header>
            <div class="title">
                <h2>
                    <a href="/posts/<%= slug %>">
                        <%= public.posts._data[slug].title %>
                    </a>
                </h2>
                <p>
                    <%= public.posts._data[slug].header %>
                </p>
            </div>
            <div class="meta">
                <time class="published" datetime="<%= public.posts._data[slug].datetime %>">Junio 10, 2016</time>
                <%- partial("posts/_authors/_layout.ejs", public._data.authors["hguerrero"]) %>
            </div>
        </header>
        <a href="#" class="image featured">
            <img src="/images/posts/<%= public.posts._data[slug].ft_image %>" alt="" />
        </a>
        <p>
            <%- excerpt(partial("/posts/" + slug)) %>
        </p>
        <footer>
            <ul class="actions">
                <li>
                    <a href="/posts/<%= slug %>" class="button big">Continue reading</a>
                </li>
            </ul>
            <ul class="stats">
                <li>
                    <a href="#">
                        <%= public.posts._data[slug].category %>
                    </a>
                </li>
                <li>
                    <a href="#" class="icon fa-heart">28</a>
                </li>
                <li>
                    <a href="#" class="icon fa-comment">128</a>
                </li>
            </ul>
        </footer>
    </article>
<% }; %>

    <!-- Pagination -->
    <ul class="actions pagination">
        <li>
            <a href="" class="disabled button big previous">Previous</a>
        </li>
        <li>
            <a href="#" class="button big next">Next</a>
        </li>
    </ul>