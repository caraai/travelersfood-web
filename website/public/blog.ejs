<% for(var slug in public.posts._data){ %>
    <!-- Post -->
    <article class="post">
        <header>
            <div class="title">
                <h2>
                    <a href="/posts/<%= slug %>">
                        <%= public.posts._data[slug].title %>
                    </a>
                </h2>
                <p>
                    <%= public.posts._data[slug].header %>
                </p>
            </div>
            <div class="meta">
                <time class="published" datetime="<%= public.posts._data[slug].datetime %>">Junio 10, 2016</time>
                <%- partial("_authors/" + public.posts._data[slug].author ) %>
            </div>
        </header>
        <a href="#" class="image featured">
            <img src="/images/<%= public.posts._data[slug].ft_image %>" alt="" />
        </a>
        <p>
            <%= public.posts._data[slug].abstract %>
        </p>
        <footer>
            <ul class="actions">
                <li>
                    <a href="/posts/<%= slug %>" class="button big">Seguir Leyendo</a>
                </li>
            </ul>
            <ul class="stats">
                <li>
                    <a href="#">
                        <%= public.posts._data[slug].category %>
                    </a>
                </li>
                <li>
                    <a href="#" class="icon fa-heart">28</a>
                </li>
                <li>
                    <a href="#" class="icon fa-comment">128</a>
                </li>
            </ul>
        </footer>
    </article>
<% }; %>

    <!-- Pagination -->
    <ul class="actions pagination">
        <li>
            <a href="" class="disabled button big previous">Anterior</a>
        </li>
        <li>
            <a href="#" class="button big next">Siguiente</a>
        </li>
    </ul>